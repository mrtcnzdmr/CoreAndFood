@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<CoreAndFood.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Food List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FoodId</td>
            <td>@item.FoodName</td>
            <td>@item.FoodPrice</td>
            <td>@item.FoodStock</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Food/FoodRemove/@item.FoodId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Food/FoodGet/@item.FoodId" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page}))
<a href="/Food/FoodAdd/" class="btn btn-primary">New Food</a>

